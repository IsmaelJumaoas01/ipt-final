{
  "name": "request-management-system",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "node server.js",
    "build": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "server": "nodemon server.js",
    "client": "ng serve --open",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "ng build --configuration production",
    "render:build": "npm install && cd frontend && npm install --legacy-peer-deps && ng build --configuration production && cd ../backend && npm install --legacy-peer-deps",
    "render:start": "cd backend && npm start"
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.0",
    "@angular/cdk": "^19.2.15",
    "@angular/cli": "^16.2.12",
    "@angular/common": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/compiler-cli": "^16.2.0",
    "@angular/core": "^16.2.0",
    "@angular/forms": "^16.2.0",
    "@angular/material": "^19.2.15",
    "@angular/platform-browser": "^16.2.0",
    "@angular/platform-browser-dynamic": "^16.2.0",
    "@angular/router": "^16.2.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-jwt": "^8.4.1",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.2.0",
    "path": "^0.12.7",
    "rxjs": "~7.8.0",
    "sequelize": "^6.31.0",
    "tslib": "^2.3.0",
    "typescript": "~5.1.3",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.12",
    "@types/jasmine": "~4.3.0",
    "concurrently": "^9.1.2",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nodemon": "^3.1.10"
  }
